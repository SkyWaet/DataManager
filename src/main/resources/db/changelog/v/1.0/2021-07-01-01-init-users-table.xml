<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="gslepenkov" id="1">
        <createTable remarks="Таблица пользователей" tableName="users">
            <column remarks="ID автоинкремент" autoIncrement="true" name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column remarks="Логин пользователя" name="login" type="text">
                <constraints nullable="false" unique="true"/>
            </column>
            <column remarks="Пароль пользователя" name="password" type="text">
                <constraints nullable="false"/>
            </column>
            <column remarks="Фамилия пользователя" name="surname" type="text"/>
            <column remarks="Имя пользователя" name="name" type="text"/>
            <column remarks="Отчество пользователя" name="patronymic" type="text"/>
            <column remarks="Email пользователя" name="email" type="text"/>
            <column remarks="Описание пользователя" name="description" type="text"/>
            <column remarks="Дата создания" name="date_created" type="timestamp"
                    defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column remarks="Дата обновления" name="date_updated" type="timestamp"/>
        </createTable>
    </changeSet>
</databaseChangeLog>